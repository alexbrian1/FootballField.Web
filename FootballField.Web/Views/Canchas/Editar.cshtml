@model Cancha
<h1>Editar Cliente</h1>

<div class="row">
    <div class="col-md-6">
        <form action="@Url.Action("Actualizar", "Canchas")" method="get">
                <input type="text" name="id" asp-for="ID" hidden>
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" class="form-control" name="nombre" asp-for="nombreCliente">
            </div>
            <div class="form-group">
                <label for="hora">Hora</label>
                <input type="number" class="form-control" name="hora" asp-for="Hora">
            </div>
            <div class="form-group">
                <label for="numero">Celular</label>
                <input type="number" class="form-control" name="numero" asp-for="numeroCelular">
            </div>
            <input class="submit" type="submit" value="Editar Cliente">
        </form>
    </div>
</div>