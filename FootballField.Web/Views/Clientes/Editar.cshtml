@model Cliente
<h1>Editar Cliente</h1>

<div class="row">
    <div class="col-md-6">
        <form action="@Url.Action("Actualizar", "Clientes")" method="get">
                <input type="text" name="id" asp-for="ID" hidden>
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" class="form-control" name="nombre" asp-for="Nombre">
            </div>
            <div class="form-group">
                <label for="apellido">Apellido</label>
                <input type="text" class="form-control" name="apellido" asp-for="Apellido">
            </div>
            <div class="form-group">
                <label for="numero">Celular</label>
                <input type="text" class="form-control" name="numero" asp-for="numeroCelular">
            </div>
            <input type="submit" value="Editar Cliente">
        </form>
    </div>
</div>